<p id="notice"><%= notice %></p>

<h1><%= t('user.index_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('user.name') %></th>
      <th><%= t('user.email') %></th>
      <th><%= t('user.address') %></th>
      <th><%= t('user.address') %></th>
      <th><%= t('user.city') %></th>
      <th><%= t('user.state') %></th>
      <th><%= t('user.zip_code') %></th>
      <th><%= t('user.emergency_contact_name') %></th>
      <th><%= t('user.emergency_contact_phone') %></th>
      <th><%= t('user.waiver_signature') %></th>
      <th><%= t('user.photo_release') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.address2 %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zip_code %></td>
        <td><%= user.emergency_contact_name %></td>
        <td><%= user.emergency_contact_phone %></td>
        <td><%= user.waiver_signature %></td>
        <td><%= user.photo_release %></td>
        <td><%= link_to t('action.show'), user %></td>
        <td><%= link_to t('action.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('action.destroy'), user, method: :delete,
                        data: { confirm: t('action.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

